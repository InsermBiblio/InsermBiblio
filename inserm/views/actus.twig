                <img src="{{theme.uri}}/images/home.png" alt="home decoration">
            </a>
        </div>
        <div id="pageActus">
            <h1>{{category.name}}</h1>
            <div id="actusFlex">
            {% for post in posts %}
                <div id="actus">
                    <div class="actusImg">
                        <img src="{{post.thumbnail.src}}" alt="dÃ©coration actu">
